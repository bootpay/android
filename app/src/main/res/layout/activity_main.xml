<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="kr.co.bootpay.android.MainActivity">

    <Button
        android:text="1. PG일반 테스트"
        android:background="#4529e5"
        android:textColor="#fff"
        android:onClick="DefaultPayment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:text="2. 통합결제 테스트"
        android:onClick="TotalPayment"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:text="3. 정기결제 테스트 (인증)"
        android:onClick="SubscriptionPayment"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <Button
        android:text="4. 정기결제 테스트 (비인증)"
        android:onClick="SubscriptionBootpayPayment"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:text="5. 본인인증 테스트"
        android:onClick="Authentication"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:text="6. 비밀번호 결제 테스트"
        android:onClick="PasswordPayment"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:text="7. 웹앱으로 연동하기"
        android:onClick="WebAppPayment"
        android:background="#4529e5"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>